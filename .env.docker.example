# ============================================
# Docker Stripe App Environment Variables
# Copy this to .env.docker 同埋填入你嘅值
# ============================================

# Node Environment
NODE_ENV=development

# Saleor API Configuration
# Replace with your actual Saleor GraphQL API URL
NEXT_PUBLIC_SALEOR_API_URL=https://your-saleor-instance.com/graphql/

# Stripe Configuration
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Saleor App Configuration
# Get these when registering the app in Saleor
SALEOR_APP_ID=your_app_id_here
SALEOR_APP_TOKEN=your_app_token_here

# DynamoDB Configuration (Local)
# Keep these as-is for local DynamoDB
AWS_ENDPOINT_URL_DYNAMODB=http://dynamodb-local:8000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Sentry (Optional - for error tracking)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# OpenTelemetry (Optional - for observability)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=